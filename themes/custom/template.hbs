<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{basics.name}} - CV</title>
    <style>
      @import
      url('https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@400;600;700&display=swap');
      * { box-sizing: border-box; margin: 0; padding: 0; color: #000000; } body
      { font-family: 'Crimson Pro', serif; font-size: 15px; line-height: 1.2; /*
      Tight line spacing */ background-color: #fff; margin: 0; padding: 40px
      80px 60px; /* Added bottom padding */ } .container { max-width: 800px;
      margin: 0 auto; page-break-inside: avoid; /* Prevent section splitting */
      } .header { text-align: center; margin-bottom: 15px; padding-bottom: 10px;
      border-bottom: 1px solid #000000; } .header h1 { font-size: 32px;
      font-weight: 700; margin-bottom: 3px; } .header h2 { font-size: 20px;
      font-weight: 600; margin-bottom: 5px; } .contact-info { display: flex;
      justify-content: center; flex-wrap: wrap; gap: 8px; margin-bottom: 5px;
      font-size: 15px; } .contact-info a { color: #000000; text-decoration:
      none; } .summary { margin-bottom: 15px; text-align: justify; line-height:
      1.3; } .section { margin-bottom: 15px; page-break-inside: avoid; /*
      Prevent section splitting */ } .section-title { font-size: 18px;
      font-weight: 700; margin-bottom: 8px; padding-bottom: 2px; border-bottom:
      1px solid #000000; } .work-item { margin-bottom: 12px; page-break-inside:
      avoid; } .work-title { font-weight: 700; margin-bottom: 2px; font-size:
      16px; } .work-details { display: flex; justify-content: space-between;
      margin-bottom: 3px; font-style: italic; } .work-highlights {
      list-style-type: disc; padding-left: 18px; margin-top: 3px; line-height:
      1.2; } .work-highlights li { margin-bottom: 2px; } .education-item {
      margin-bottom: 8px; } .skills-section { display: flex; flex-wrap: wrap;
      gap: 15px; page-break-inside: avoid; } .skill-item { flex: 1 0 45%;
      margin-bottom: 8px; } .skill-title { font-weight: 700; /* Made bold */
      margin-bottom: 2px; } .language-section { display: flex; flex-wrap: wrap;
      gap: 15px; } .language-item { flex: 1 0 30%; margin-bottom: 8px; }
      .language-title { font-weight: 700; /* Made bold */ }
      .certificates-section { display: flex; flex-wrap: wrap; gap: 8px; }
      .certificate-item { flex: 1 0 45%; margin-bottom: 8px; } @media print {
      body { padding-bottom: 80px; /* Extra bottom padding for print */ }
      .section, .work-item, .skills-section { page-break-inside: avoid; } }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>{{basics.name}}</h1>
        <h2>{{basics.label}}</h2>
        <div class="contact-info">
          <span>{{basics.location.city}}, {{basics.location.country}}</span>
          |
          <span>{{basics.phone}}</span>
          |
          <span><a href="mailto:{{basics.email}}">{{basics.email}}</a></span>
          |
          {{#if basics.website}}<span><a
                href="{{basics.website}}"
                target="_blank"
              >my portfolio</a></span>
            |{{/if}}
          {{#each basics.profiles}}
            <span><a
                href="{{url}}"
                target="_blank"
              >{{network}}</a></span>{{#unless @last}} | {{/unless}}
          {{/each}}
        </div>
      </div>

      <div class="summary">
        <p>{{basics.summary}}</p>
      </div>

      <div class="section">
        <h3 class="section-title">WORK EXPERIENCE</h3>
        {{#each work}}
          <div class="work-item">
            <div class="work-title">{{position}}</div>
            <div class="work-details">
              <span>{{company}}</span>
              <span>{{startDate}} â€“ {{endDate}}</span>
            </div>
            {{#if location}}<div class="work-details">
                <span>{{location}}</span>
              </div>{{/if}}
            <ul class="work-highlights">
              {{#each highlights}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>

      <div class="section">
        <h3 class="section-title">EDUCATION</h3>
        {{#each education}}
          <div class="education-item">
            <div class="work-title">{{studyType}} in {{area}}</div>
            <div class="work-details">
              <span>{{institution}}</span>
            </div>
          </div>
        {{/each}}
      </div>

      <div class="section">
        <h3 class="section-title">SKILLS</h3>
        <div class="skills-section">
          {{#each skills}}
            <div class="skill-item">
              <div class="skill-title">{{name}}</div>
              <div>{{level}}</div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="section">
        <h3 class="section-title">LANGUAGES</h3>
        <div class="language-section">
          {{#each languages}}
            <div class="language-item">
              <div class="skill-title">{{language}}</div>
              <div>{{fluency}}</div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="section">
        <h3 class="section-title">COURSES</h3>
        <div class="certificates-section">
          {{#each certificates}}
            <div class="certificate-item">
              <div class="certificate-title">{{name}}</div>
              <div class="certificate-details">
                <span>{{issuer}}</span>
                <span>{{date}}</span>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </body>
</html>