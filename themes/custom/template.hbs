<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{basics.name}} - CV</title>
    <style>
      @import
      url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap');
      * { box-sizing: border-box; margin: 0; padding: 0; } body { font-family:
      'Open Sans', sans-serif; font-size: 14px; line-height: 1.5; color: #333;
      background-color: #fff; margin: 0; padding: 0; } .container { max-width:
      800px; margin: 0 auto; padding: 20px; } .header { text-align: center;
      margin-bottom: 20px; } .header h1 { font-size: 28px; font-weight: 700;
      margin-bottom: 5px; color: #2e6da4; } .header h2 { font-size: 18px;
      font-weight: 600; margin-bottom: 10px; color: #555; } .contact-info {
      display: flex; justify-content: center; flex-wrap: wrap; gap: 15px;
      margin-bottom: 10px; } .contact-info span { font-size: 14px; } .summary {
      margin-bottom: 25px; text-align: justify; } .section { margin-bottom:
      25px; } .section-title { font-size: 16px; font-weight: 700;
      text-transform: uppercase; margin-bottom: 15px; color: #2e6da4;
      border-bottom: 2px solid #2e6da4; padding-bottom: 5px; } .work-item {
      margin-bottom: 15px; } .work-title { font-weight: 600; margin-bottom: 5px;
      } .work-details { display: flex; justify-content: space-between;
      margin-bottom: 5px; font-style: italic; color: #555; } .work-highlights {
      list-style-type: disc; padding-left: 20px; } .education-item {
      margin-bottom: 15px; } .skills-section { display: flex; flex-wrap: wrap;
      gap: 30px; } .skill-item { flex: 1 0 45%; margin-bottom: 15px; }
      .skill-title { font-weight: 600; margin-bottom: 5px; } .language-section {
      display: flex; flex-wrap: wrap; gap: 30px; } .language-item { flex: 1 0
      30%; margin-bottom: 15px; } .certificates-section { display: flex;
      flex-wrap: wrap; gap: 15px; } .certificate-item { flex: 1 0 45%;
      margin-bottom: 15px; } .certificate-title { font-weight: 600; }
      .certificate-details { display: flex; justify-content: space-between;
      color: #555; }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>{{basics.name}}</h1>
        <h2>{{basics.label}}</h2>
        <div class="contact-info">
          <span>{{basics.location.city}}, {{basics.location.countryCode}}</span>
          |
          <span>{{basics.phone}}</span>
          |
          <span>{{basics.email}}</span>
          |
          <span>{{basics.website}}</span>
          |
          {{#each basics.profiles}}
            <span>{{this.network}}</span>{{#unless @last}} | {{/unless}}
          {{/each}}
        </div>
      </div>

      <div class="summary">
        {{basics.summary}}
      </div>

      <div class="section">
        <h3 class="section-title">WORK EXPERIENCE</h3>
        {{#each work}}
          <div class="work-item">
            <div class="work-title">{{position}}</div>
            <div class="work-details">
              <span>{{company}}</span>
              <span>{{startDate}} â€“ {{endDate}}</span>
            </div>
            <div class="work-details">
              <span>{{location}}</span>
            </div>
            <ul class="work-highlights">
              {{#each highlights}}
                <li>{{this}}</li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>

      <div class="section">
        <h3 class="section-title">EDUCATION</h3>
        {{#each education}}
          <div class="education-item">
            <div class="work-title">{{studyType}} in {{area}}</div>
            <div class="work-details">
              <span>{{institution}}</span>
            </div>
            <div class="work-details">
              <span>{{location}}</span>
            </div>
          </div>
        {{/each}}
      </div>

      <div class="section">
        <h3 class="section-title">SKILLS</h3>
        <div class="skills-section">
          {{#each skills}}
            <div class="skill-item">
              <div class="skill-title">{{name}}</div>
              <div>{{description}}</div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="section">
        <h3 class="section-title">LANGUAGES</h3>
        <div class="language-section">
          {{#each languages}}
            <div class="language-item">
              <div class="skill-title">{{language}}</div>
              <div>{{fluency}}</div>
            </div>
          {{/each}}
        </div>
      </div>

      <div class="section">
        <h3 class="section-title">COURSES</h3>
        <div class="certificates-section">
          {{#each certificates}}
            <div class="certificate-item">
              <div class="certificate-title">{{name}}</div>
              <div class="certificate-details">
                <span>{{issuer}}</span>
                <span>{{date}}</span>
              </div>
              <div class="certificate-details">
                <span>{{location}}</span>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </body>
</html>